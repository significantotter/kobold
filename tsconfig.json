{
	"compilerOptions": {
		"target": "es2021",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"composite": true,
		"lib": ["es2021"],
		"declaration": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": false,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"disableSizeLimit": true
	},
	"include": ["src/**/*.ts", "src/**/*.json", "types.d.ts"],
	"exclude": [
		"dist",
		"migrations",
		"node_modules",
		"tests",
		"jest.config.ts",
		"jest.setup.ts",
		"knexfile.ts"
	]
}
