{
	"name": "@kobold/client",
	"version": "1.0.0",
	"author": "Significantotter",
	"description": "A discord.js bot for Pathfinder 2e play by post games.",
	"license": "MIT",
	"private": true,
	"engines": {
		"node": ">=24.12.0"
	},
	"main": "dist/start-bot.js",
	"exports": [
		{
			"types": "./dist/start-bot.d.ts",
			"default": "./dist/start-bot.js"
		},
		{
			"types": "./dist/start-manager.d.ts",
			"default": "./dist/start-manager.js"
		}
	],
	"type": "module",
	"scripts": {
		"generate-json-schemas": "tsc --project tsconfig.json && node --import @swc-node/register/esm-register ./src/scripts/generate-json-schemas.ts",
		"check-circular": "madge --circular --extensions ts ./src",
		"test": "vitest --watch=false",
		"test:unit": "vitest --project unit --watch=false",
		"test:integration": "vitest --project integration --watch=false",
		"test:watch": "vitest --watch=true",
		"test:unit:watch": "vitest --project unit --watch=true",
		"test:integration:watch": "vitest --project integration --watch=true",
		"build": "tsc --project tsconfig.json",
		"commands:view": "node dist/start-bot.js commands view",
		"commands:register": "node dist/start-bot.js commands register",
		"commands:rename": "node dist/start-bot.js commands rename",
		"commands:delete": "node dist/start-bot.js commands delete",
		"commands:clear": "node dist/start-bot.js commands clear",
		"commands:clear-prod": "node dist/start-bot.js commands clear ",
		"commands:register-prod": "node dist/start-bot.js commands register",
		"dev": "node --import @swc-node/register/esm-register src/start-bot.ts",
		"dev:manager": "node --import @swc-node/register/esm-register src/start-manager.ts",
		"start:dev": "node --enable-source-maps dist/start-bot.js",
		"start": "node dist/start-bot.js",
		"start:manager-dev": "node --enable-source-maps dist/start-manager.js",
		"start:manager": "node dist/start-manager.js"
	},
	"dependencies": {
		"@kobold/base-utils": "workspace:*",
		"@kobold/config": "workspace:*",
		"@kobold/db": "workspace:*",
		"@kobold/documentation": "workspace:*",
		"@kobold/nethys": "workspace:*",
		"@traversable/zod": "^0.0.57",
		"axios": "^1.13.2",
		"class-transformer": "0.5.1",
		"class-validator": "^0.14.3",
		"date-fns": "^4.1.0",
		"dice-typescript": "^1.6.1",
		"discord.js": "^14.25.1",
		"discord.js-rate-limiter": "1.3.2",
		"drizzle-orm": "^0.33.0",
		"express": "4.22.1",
		"express-promise-router": "4.1.1",
		"filesize": "11.0.13",
		"filtrex": "^3.1.0",
		"form-data": "^4.0.5",
		"json-schema": "^0.4.0",
		"kysely": "^0.28.9",
		"lodash": "^4.17.21",
		"node-fetch": "3.3.2",
		"node-schedule": "2.1.1",
		"pino": "10.1.0",
		"pino-pretty": "13.1.3",
		"pm2": "^6.0.14",
		"reflect-metadata": "^0.2.2",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@faker-js/faker": "^10.1.0",
		"@swc-node/core": "^1.14.1",
		"@swc-node/register": "^1.11.1",
		"@swc/cli": "^0.7.9",
		"@swc/core": "^1.15.7",
		"@types/express": "4.17.25",
		"@types/lodash": "^4.17.21",
		"@types/node": "^25.0.3",
		"@types/node-schedule": "2.1.8",
		"@typescript-eslint/eslint-plugin": "^8.50.0",
		"@typescript-eslint/parser": "^8.50.0",
		"discord-api-types": "^0.38.37",
		"drizzle-kit": "^0.31.8",
		"eslint": "^9.39.2",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-unicorn": "^62.0.0",
		"fishery": "^2.4.0",
		"madge": "^8.0.0",
		"typescript": "^5.9.3",
		"type-fest": "^5.4.1",
		"vitest": "^4.0.16",
		"zod-schema-faker": "^2.0.2"
	},
	"madge": {
		"tsConfig": "./tsconfig.json",
		"detectiveOptions": {
			"ts": {
				"skipTypeImports": true
			}
		}
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	},
	"nodemonConfig": {}
}
