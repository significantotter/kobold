{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"lib": ["es2023"],
		"module": "Node16",
		"target": "ESNext",
		"moduleResolution": "node16",

		"composite": true,
		"sourceMap": true,
		"rootDir": "./src",
		"outDir": "dist",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"disableSizeLimit": true
	},
	"include": ["src/**/*"],
	"exclude": [
		"dist",
		"src/migrations",
		"node_modules",
		"knexfile.ts",
		"**/*.spec.ts",
		"**/*.test.ts"
	]
}
