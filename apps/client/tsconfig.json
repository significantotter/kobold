{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"lib": ["es2023"],
		"module": "Node16",
		"target": "ESNext",
		"moduleResolution": "node16",

		"composite": true,
		"sourceMap": true,
		"rootDir": "./src",
		"outDir": "dist",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"disableSizeLimit": true,
		"types": ["vitest/globals"],
		"paths": {
			"kobold-db/test-utils": ["../../packages/kobold-db/dist/test-utils.d.ts"]
		}
	},
	"include": ["src/**/*"],
	"exclude": [
		"dist",
		"src/migrations",
		"node_modules",
		"knexfile.ts",
		"src/services/pf2etools/Pf2eTools/**/*"
	]
}
