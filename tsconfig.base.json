{
	"display": "Default",
	"compilerOptions": {
		"composite": false,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"inlineSources": false,
		"isolatedModules": true,
		"moduleResolution": "node",
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"preserveWatchOutput": true,
		"skipLibCheck": true,
		"strict": true,
		"types": ["vitest/globals"],
		"paths": {
			"kobold-db/test-utils": ["./packages/kobold-db/src/test-utils.ts"]
		}
	},
	"ts-node": {
		"transpileOnly": true,
		"files": true,
		"esm": true
	},
	"exclude": ["node_modules", "dist", "*.config.ts", "vitest.setup.ts"]
}
