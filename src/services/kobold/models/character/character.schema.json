{
	"title": "character",
	"type": "object",
	"description": "An imported character",
	"properties": {
		"id": {
			"type": "integer",
			"readOnly": true,
			"description": "The id of the character record."
		},
		"name": {
			"type": "string",
			"description": "The name of the character."
		},
		"charId": {
			"type": "integer",
			"description": "The external wanderer's guide character id."
		},
		"userId": {
			"type": "string",
			"description": "The discord id of the user who imported the character"
		},
		"trackerMessageId": {
			"type": ["string", "null"],
			"description": "The discord id of message set to track this character's stats."
		},
		"trackerChannelId": {
			"type": ["string", "null"],
			"description": "The discord id of the channel containing the message set to track this character's stats."
		},
		"trackerGuildId": {
			"type": ["string", "null"],
			"description": "The discord id of the guild with the channel set to track this character's stats."
		},
		"trackerMode": {
			"type": "string",
			"description": "The mode of the tracker message. Either counters_only', 'basic_stats', or 'full_sheet.",
			"enum": ["counters_only", "basic_stats", "full_sheet"]
		},
		"pathBuilderData": {
			"type": ["null", "object"],
			"description": "The general character data from the PathBuilder json export"
		},
		"characterData": {
			"type": "object",
			"description": "The general character data from the Wanderer's guide API /character endpoint",
			"properties": {
				"id": { "type": "number" },
				"userID": { "type": "number" },
				"buildID": { "type": ["null", "number"] },
				"name": { "type": "string" },
				"level": { "type": "number" },
				"experience": { "type": "number" },
				"currentHealth": { "type": ["null", "number"] },
				"tempHealth": { "type": ["null", "number"] },
				"heroPoints": { "type": ["null", "number"] },
				"ancestryID": { "type": ["null", "number"] },
				"heritageID": { "type": ["null", "number"] },
				"uniHeritageID": { "type": ["null", "number"] },
				"backgroundID": { "type": ["null", "number"] },
				"classID": { "type": ["null", "number"] },
				"classID_2": { "type": ["null", "number"] },
				"inventoryID": { "type": "number" },
				"notes": {},
				"rollHistoryJSON": {},
				"details": {},
				"customCode": {},
				"infoJSON": {
					"type": ["null", "object"],
					"properties": { "imageURL": { "type": "string" }, "pronouns": {} },
					"additionalProperties": true
				},
				"dataID": { "type": ["null", "number"] },
				"currentStamina": { "type": ["null", "number"] },
				"currentResolve": { "type": ["null", "number"] },
				"builderByLevel": { "type": "number" },
				"optionAutoDetectPreReqs": { "type": "number" },
				"optionAutoHeightenSpells": { "type": "number" },
				"optionPublicCharacter": { "type": "number" },
				"optionCustomCodeBlock": { "type": "number" },
				"optionDiceRoller": { "type": "number" },
				"optionClassArchetypes": { "type": "number" },
				"optionIgnoreBulk": { "type": "number" },
				"variantProfWithoutLevel": { "type": "number" },
				"variantFreeArchetype": { "type": "number" },
				"variantAncestryParagon": { "type": "number" },
				"variantStamina": { "type": "number" },
				"variantAutoBonusProgression": { "type": "number" },
				"variantGradualAbilityBoosts": { "type": "number" },
				"enabledSources": {},
				"enabledHomebrew": {},
				"createdAt": { "type": "string" },
				"updatedAt": { "type": "string" }
			},
			"required": [
				"id",
				"userID",
				"name",
				"level",
				"experience",
				"inventoryID",
				"notes",
				"rollHistoryJSON",
				"details",
				"customCode",
				"infoJSON",
				"enabledSources",
				"enabledHomebrew",
				"createdAt",
				"updatedAt"
			]
		},
		"calculatedStats": {
			"type": "object",
			"description": "The computed base stat block from the Wanderer's guide API /character/calculated-stats endpoint",
			"properties": {
				"charID": { "type": "number" },
				"maxHP": { "type": ["number", "null"] },
				"totalClassDC": { "type": ["number", "null"] },
				"totalSpeed": { "type": ["number", "null"] },
				"totalAC": { "type": ["number", "null"] },
				"totalPerception": { "type": ["number", "null"] },
				"totalSkills": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"Name": { "type": "string" },
							"Bonus": { "type": ["string", "number", "null"] }
						},
						"required": ["Name", "Bonus"]
					}
				},
				"totalSaves": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"Name": { "type": "string" },
							"Bonus": { "type": ["string", "number", "null"] }
						},
						"required": ["Name", "Bonus"]
					}
				},
				"totalAbilityScores": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"Name": { "type": "string" },
							"Score": { "type": ["number", "null"] }
						},
						"required": ["Name", "Score"]
					}
				},
				"weapons": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"Name": { "type": "string" },
							"Bonus": { "type": ["string", "number", "null"] },
							"Damage": { "type": ["string", "number", "null"] }
						},
						"required": ["Name"]
					}
				},
				"createdAt": { "type": "string" },
				"updatedAt": { "type": "string" }
			}
		},
		"isActiveCharacter": {
			"type": "boolean",
			"description": "Whether this is the active character for the user's character based commands"
		},
		"importSource": {
			"type": "string",
			"description": "What source website this character was imported from."
		},
		"createdAt": {
			"type": "string",
			"format": "date-time",
			"description": "When the character was first imported"
		},
		"lastUpdatedAt": {
			"type": "string",
			"format": "date-time",
			"description": "When the character was last updated"
		}
	},
	"required": [
		"id",
		"name",
		"charId",
		"userId",
		"trackerMode",
		"rollMacros",
		"attributes",
		"modifiers",
		"actions",
		"isActiveCharacter",
		"importSource"
	]
}
